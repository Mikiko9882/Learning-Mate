<table class='table'>
  <thead>
    <tr>
      <th></th>
      <th>グループ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= link_to group.group_name,teacher_group_path(group) %></td>
        <% if group.is_owned_by?(current_user) %>
          <td><%= link_to 'Edit', edit_teacher_group_path(group), class: "group_#{group.id} btn btn-sm btn-success" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table> 