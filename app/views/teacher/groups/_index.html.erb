<table class='table'>
  <thead>
    <tr>
      <th>グループ名</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% groups.each do |group| %>
      <tr>
        <td><%= link_to group.group_name,teacher_group_path(group) %></td>
        <% if group.is_owned_by?(current_user) %>
          <td><%= link_to t('defaults.edit'), edit_teacher_group_path(group), class: 'btn btn-success me-2' %>
          </td>
        <% end %>
        <% if group.is_owned_by?(current_user) %>
          <td><%= button_to t('defaults.delete'), teacher_group_path(group), method: :delete, data: { turbo_confirm: "本当に削除しますか？" }, class: 'btn btn-danger' %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table> 