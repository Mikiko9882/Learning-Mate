<!-- Navbar -->
<!-- Remove "fixed-top" class to make navigation bar scrollable with the page -->
<header class="header navbar navbar-expand-lg bg-light shadow-sm fixed-top">
  <div class="container px-0">
    <a href="index.html" class="navbar-brand pe-3">
      <%= link_to '#', class: "navbar-brand pe-3" do %>
      Learning Mate
      <% end %>
    </a>
    <div id="navbarNav" class="offcanvas offcanvas-end">
      <div class="offcanvas-header border-top">
        <%= link_to (t 'defaults.logout'), teacher_logout_path, class: 'btn btn-primary btn-sm fs-sm rounded d-none d-lg-inline-flex', data: {turbo_method: :delete} %>
      </div>      
    </div>

    <div class="form-check from-switch mode-switch pe-lg-1 ms-auto me-0" data-bs-toggle="mode">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
          学年でまとめる
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <li><%= link_to 'グループ作成', new_teacher_group_path, class: 'dropdown-item' %></li>
          <li><%= link_to 'グループ一覧', teacher_groups_path, class: 'dropdown-item' %></li>
        </ul>
      </div>
    </div>
    <div class="form-check from-switch mode-switch pe-lg-1 ms-auto me-0" data-bs-toggle="mode">
      <%= link_to t('teacher.test_results.index.title'), teacher_test_results_path, class: 'btn btn-primary btn-sm fs-sm rounded d-none d-lg-inline-flex' %>
    </div>
    <div class="form-check from-switch mode-switch pe-lg-1 ms-auto me-0" data-bs-toggle="mode">
      <%= link_to t('teacher.users.index.title'), teacher_users_path, class: 'btn btn-primary btn-sm fs-sm rounded d-none d-lg-inline-flex' %>
    </div>
    <div class="form-check from-switch mode-switch pe-lg-1 ms-auto me-0" data-bs-toggle="mode">
      <%= link_to (t 'defaults.logout'), teacher_logout_path, class: 'btn btn-primary btn-sm fs-sm rounded d-none d-lg-inline-flex', data: {turbo_method: :delete} %>
    </div>
  </div>
</header>