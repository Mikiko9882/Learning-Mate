<% content_for(:title, t('.title')) %>
<!-- Breadcrumb -->
<nav class="container mt-lg-4 pt-5" aria-label="breadcrumb"></nav>
<!-- Page content -->
<section class="container mt-4 mb-lg-5 pt-lg-2 pb-5">
  <!-- Page title + Layout switcher + Search form -->
  <div class="row align-items-end gy-3 mb-4 pb-lg-3 pb-1">
    <div class="col-lg-5 col-md-4">
      <h1 class="mb-2 mb-md-0"><%= t '.title' %></h1>
    </div>
    <div class="col-lg-7 col-md-8">
      <%= search_form_for @q, url: teacher_test_results_path do |f| %>
        <div class="col-lg-5 col-sm-6 mb-2">
          <div class="input-group">
            <%= f.select :test_name_id_eq, TestName.all.map{|tn| [tn.test_name, tn.id]}, { include_blank: 'テスト名で検索' }, { class: 'form-select' } %>
          </div>
        </div>
        <div class="col-lg-5 col-sm-6 mb-2">
          <div class="input-group">
            <%= f.select :subject_id_eq, Subject.all.map{|s| [s.subject_name, s.id]}, { include_blank: '教科名で検索' }, { class: 'form-select' } %>
          </div>
        </div>
        <div class="col-lg-2 col-sm-12">
          <div class="input-group">
            <%= f.submit "検索", class: 'btn btn-primary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12 mb-3">
      
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= TestResult.human_attribute_name(:id) %></th>
          <th scope="col"><%= TestResult.human_attribute_name(:test_name) %></th>
          <th scope="col"><%= TestResult.human_attribute_name(:grade_and_class) %></th>
          <th scope="col"><%= TestResult.human_attribute_name(:user) %></th>
          <th scope="col"><%= TestResult.human_attribute_name(:created_at) %></th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <%= render @test_results %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <!-- ページネーション -->
      <%= paginate @test_results %>
    </div>
  </div>
</section>